<button class="inline-flex items-center rounded-lg justify-center p-2 hover:bg-gray-100 dark:hover:bg-gray-700 text-sm font-medium leading-none text-gray-900 dark:text-white" type="button" id="user-menu-button" aria-expanded="false" data-dropdown-toggle="user-dropdown" data-dropdown-placement="bottom">
	<svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24"><g fill="none" stroke="#333" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"><circle cx="12" cy="8" r="5"/><path d="M20 21a8 8 0 0 0-16 0"/></g></svg>
</button>
<div class="z-50 hidden my-4 text-base list-none bg-white divide-y divide-gray-100 rounded-lg shadow dark:bg-gray-700 dark:divide-gray-600" id="user-dropdown">
	<div class="px-4 py-3">
		<span class="block text-sm font-medium text-gray-900 dark:text-white">@await Component.InvokeAsync("UserFirstName") @await Component.InvokeAsync("UserLastName")</span>
		<span class="block text-xs  text-gray-500 truncate dark:text-gray-400">@await Component.InvokeAsync("UserEmail")</span>
	</div>
	<ul class="py-2" aria-labelledby="user-menu-button">
		<li>
			<a asp-action="Index" asp-controller="User" asp-area="User" style="font-size: 13px;" class="block px-4 py-1 text-gray-700 hover:bg-gray-100 dark:hover:bg-gray-600 dark:text-gray-200 dark:hover:text-white">Hesabım</a>
		</li>
		<li>
			<a asp-action="" asp-controller="" asp-area="" style="font-size: 13px;" class="block px-4 py-1 text-gray-700 hover:bg-gray-100 dark:hover:bg-gray-600 dark:text-gray-200 dark:hover:text-white">Siparişlerim</a>
		</li>
		<li>
			<a asp-action="" asp-controller="" asp-area="" style="font-size: 13px;" class="block px-4 py-1 text-gray-700 hover:bg-gray-100 dark:hover:bg-gray-600 dark:text-gray-200 dark:hover:text-white">Favoriler</a>
		</li>
		<li>
			<a asp-action="Logout" asp-controller="Logout" asp-area="Authentication" style="font-size: 13px;" class="block px-4 py-1 text-gray-700 hover:bg-gray-100 dark:hover:bg-gray-600 dark:text-gray-200 dark:hover:text-white">Çıkış yap</a>
		</li>
	</ul>
</div>