@model AddressModel
@{
	ViewData["Title"] = "Adres detayları: " + @Model.AddressName;
	Layout = "_UserLayout";
}
<section class="bg-white dark:bg-gray-900">
	<div class="max-w-4xl px-4">
		<nav class="flex" aria-label="Breadcrumb">
			<ol class="inline-flex items-center space-x-1 mb-4 -mt-4 md:mt-4 md:space-x-2 rtl:space-x-reverse">
				<li class="inline-flex items-center">
					<a href="#"
					   class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-black dark:text-gray-400 dark:hover:text-white">
						<svg class="w-4 h-4 me-2.5" xmlns="http://www.w3.org/2000/svg" width="1em"
						     height="1em" viewBox="0 0 24 24">
							<g fill="none" stroke="#333" stroke-linecap="round"
							   stroke-linejoin="round" stroke-width="2">
								<path d="M15 21v-8a1 1 0 0 0-1-1h-4a1 1 0 0 0-1 1v8" />
								<path d="M3 10a2 2 0 0 1 .709-1.528l7-5.999a2 2 0 0 1 2.582 0l7 5.999A2 2 0 0 1 21 10v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z" />
							</g>
						</svg>
						Hesabım
					</a>
				</li>
				<li>
					<div class="flex items-center">
						<svg class="rtl:rotate-180 w-3 h-3 text-gray-400 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
							<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
						</svg>
						<a asp-action="Addresses" asp-controller="User" asp-area="User" class="ms-1 text-sm font-medium text-gray-700 hover:text-blue-600 md:ms-2 dark:text-gray-400 dark:hover:text-white">Adreslerim</a>
					</div>
				</li>
				<li aria-current="page">
					<div class="flex items-center">
						<svg class="rtl:rotate-180 w-3 h-3 text-gray-400 mx-1" aria-hidden="true"
						     xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
							<path stroke="currentColor" stroke-linecap="round"
							      stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4" />
						</svg>
						<span class="ms-1 text-sm font-medium text-gray-500 md:ms-2 dark:text-gray-400">Adres detayları</span>
					</div>
				</li>
				<li aria-current="page">
					<div class="flex items-center">
						<svg class="rtl:rotate-180 w-3 h-3 text-gray-400 mx-1" aria-hidden="true"
							 xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
							<path stroke="currentColor" stroke-linecap="round"
								  stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4" />
						</svg>
						<span class="ms-1 text-sm font-medium text-gray-500 md:ms-2 dark:text-gray-400">@Model.AddressName</span>
					</div>
				</li>
			</ol>
		</nav>
		<div class="grid mb-4 grid-cols-1 sm:gap-6 sm:mb-5">
			<div class="flex flex-col mt-6">
				<h3 class="font-bold text-base">Teslimat Adresim - @Model.AddressName</h3>
				<p class="text-xs text-gray-500 font-medium">
					Eğer fatura adresi görüntüleyemiyorsanız, teslimat adresiniz ile fatura adresiniz aynıdır.
				</p>
			</div>
			<div class="w-full -mt-2 flex flex-col gap-y-4">
				<div class="flex flex-col sm:flex-row justify-between gap-4">
					@if (!string.IsNullOrEmpty(Model.TCNumber))
					{
						<div class="w-full">
							<label asp-for="TCNumber" class="block mb-2 text-xs font-medium text-gray-900 relative inline-flex gap-1 dark:text-white items-center">
								Türkiye Cumhuriyeti Kimlik Numarası
								<span asp-validation-for="TCNumber" class="text-error font-semibold text-red-600 rounded-lg text-xs"></span>
							</label>
							<div class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500">
								<span>@Model.TCNumber</span>
							</div>
						</div>
					}

					@if (!string.IsNullOrEmpty(Model.PassaportCountry) || !string.IsNullOrEmpty(Model.PassaportNumber))
					{
						@if (!string.IsNullOrEmpty(Model.PassaportCountry))
						{
							<div class="w-full">
								<label asp-for="PassaportCountry" class="block mb-2 text-xs font-medium text-gray-900 relative inline-flex gap-1 dark:text-white items-center">
									Uyruk
									<span asp-validation-for="PassaportCountry" class="text-error font-semibold text-red-600 rounded-lg text-xs"></span>
								</label>
								<div class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500">
									<span>@Model.PassaportCountry</span>
								</div>
							</div>
						}

						@if (!string.IsNullOrEmpty(Model.PassaportNumber))
						{
							<div class="w-full">
								<label asp-for="PassaportNumber" class="block mb-2 text-xs font-medium text-gray-900 relative inline-flex gap-1 dark:text-white items-center">
									Pasaport Numarası
									<span asp-validation-for="PassaportNumber" class="text-error font-semibold text-red-600 rounded-lg text-xs"></span>
								</label>
								<div class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500">
									<span>@Model.PassaportNumber</span>
								</div>
							</div>
						}
					}
					<div class="w-full">
						<label asp-for="FirstName" class="block mb-2 text-xs font-medium text-gray-900 relative inline-flex gap-1 dark:text-white items-center">
							İsim
							<span asp-validation-for="FirstName" class="text-error font-semibold text-red-600 rounded-lg text-xs"></span>
						</label>
						<div class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500">
							<span>@Model.FirstName</span>
						</div>
					</div>
					<div class="w-full">
						<label asp-for="LastName" class="block mb-2 text-xs font-medium text-gray-900 relative inline-flex gap-1 dark:text-white items-center">
							Soyisim
							<span asp-validation-for="LastName" class="text-error font-semibold text-red-600 rounded-lg text-xs"></span>
						</label>
						<div class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500">
							<span>@Model.LastName</span>
						</div>
					</div>
				</div>
				<div class="flex flex-col sm:flex-row justify-between gap-4">
					<div class="w-full">
						<label asp-for="PhoneNumber" class="block mb-2 text-xs font-medium text-gray-900 relative inline-flex gap-1 dark:text-white items-center">
							Telefon numarası
							<span asp-validation-for="PhoneNumber" class="text-error font-semibold text-red-600 rounded-lg text-xs"></span>
						</label>
						<div class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500">
							<span>@Model.PhoneNumber</span>
						</div>
					</div>
					<div class="w-full">
						<label asp-for="AlternativePhoneNumber" class="block mb-2 text-xs font-medium text-gray-900 relative inline-flex gap-1 dark:text-white items-center">
							Alternatif telefon numarası
							<span asp-validation-for="AlternativePhoneNumber" class="text-error font-semibold text-red-600 rounded-lg text-xs"></span>
						</label>
						<div class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500">
							@if (!string.IsNullOrEmpty(Model.AlternativePhoneNumber))
							{
								<span>@Model.AlternativePhoneNumber</span>
							}
							<span>Alternatif numara girilmedi</span>
						</div>
					</div>
				</div>
				<div class="flex flex-col sm:flex-row justify-between gap-4">
					<div class="w-full">
						<label asp-for="Email" class="block mb-2 text-xs font-medium text-gray-900 relative inline-flex gap-1 dark:text-white items-center">
							Email
							<span asp-validation-for="Email" class="text-error font-semibold text-red-600 rounded-lg text-xs"></span>
						</label>
						<div class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500">
							<span>@Model.Email</span>
						</div>
					</div>
				</div>
				<div class="flex flex-col sm:flex-row justify-between gap-4">
					<div class="w-full">
						<label asp-for="City" class="block mb-2 text-xs font-medium text-gray-900 relative inline-flex gap-1 dark:text-white items-center">
							Şehir
							<span asp-validation-for="City" class="text-error font-semibold text-red-600 rounded-lg text-xs"></span>
						</label>
						<div class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500">
							<span>@Model.City</span>
						</div>
					</div>
					<div class="w-full">
						<label asp-for="District" class="block mb-2 text-xs font-medium text-gray-900 relative inline-flex gap-1 dark:text-white items-center">
							İl
							<span asp-validation-for="District" class="text-error font-semibold text-red-600 rounded-lg text-xs"></span>
						</label>
						<div class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500">
							<span>@Model.District</span>
						</div>
					</div>
					<div class="w-full">
						<label asp-for="Neighborhood" class="block mb-2 text-xs font-medium text-gray-900 relative inline-flex gap-1 dark:text-white items-center">
							İlçe
							<span asp-validation-for="Neighborhood" class="text-error font-semibold text-red-600 rounded-lg text-xs"></span>
						</label>
						<div class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500">
							<span>@Model.Neighborhood</span>
						</div>
					</div>
				</div>
				<div class="flex flex-col sm:flex-row justify-between gap-4">
					<div class="w-full">
						<label asp-for="AddressInfo" class="block mb-2 text-xs font-medium text-gray-900 relative inline-flex gap-1 dark:text-white items-center">
							Adres bilgisi
							<span asp-validation-for="AddressInfo" class="text-error font-semibold text-red-600 rounded-lg text-xs"></span>
						</label>
						<div class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500">
							<span>@Model.AddressInfo</span>
						</div>
					</div>
				</div>
				@if (Model.IsInvoiceAddress)
				{
					<div class="flex flex-col mt-6">
						<h3 class="font-bold text-base">
							Fatura Adresim - @Model.InvoiceAddressName
						</h3>
					</div>
				}
				@if (Model.IsInvoiceAddress)
				{
					<div class="flex flex-col sm:flex-row justify-between gap-4">
						<div class="w-full">
							<label asp-for="AddressInfo" class="block mb-2 text-xs font-medium text-gray-900 relative inline-flex gap-1 dark:text-white items-center">
								İsim
								<span asp-validation-for="AddressInfo" class="text-error font-semibold text-red-600 rounded-lg text-xs"></span>
							</label>
							<div class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500">
								<span>@Model.InvoiceFirstName</span>
							</div>
						</div>
						<div class="w-full">
							<label asp-for="AddressInfo" class="block mb-2 text-xs font-medium text-gray-900 relative inline-flex gap-1 dark:text-white items-center">
								Soyisim
								<span asp-validation-for="AddressInfo" class="text-error font-semibold text-red-600 rounded-lg text-xs"></span>
							</label>
							<div class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500">
								<span>@Model.InvoiceLastName</span>
							</div>
						</div>
					</div>
					<div class="flex flex-col sm:flex-row justify-between gap-4">
						<div class="w-full">
							<label asp-for="InvoicePhoneNumber" class="block mb-2 text-xs font-medium text-gray-900 relative inline-flex gap-1 dark:text-white items-center">
								Telefon numarası
								<span asp-validation-for="InvoicePhoneNumber" class="text-error font-semibold text-red-600 rounded-lg text-xs"></span>
							</label>
							<div class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500">
								<span>@Model.InvoicePhoneNumber</span>
							</div>
						</div>
						<div class="w-full">
							<label asp-for="InvoiceEmail" class="block mb-2 text-xs font-medium text-gray-900 relative inline-flex gap-1 dark:text-white items-center">
								Email
								<span asp-validation-for="InvoiceEmail" class="text-error font-semibold text-red-600 rounded-lg text-xs"></span>
							</label>
							<div class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500">
								<span>@Model.InvoiceEmail</span>
							</div>
						</div>
					</div>
					<div class="flex flex-col sm:flex-row justify-between gap-4">
						<div class="w-full">
							<label asp-for="InvoiceCity" class="block mb-2 text-xs font-medium text-gray-900 relative inline-flex gap-1 dark:text-white items-center">
								Şehir
								<span asp-validation-for="InvoiceCity" class="text-error font-semibold text-red-600 rounded-lg text-xs"></span>
							</label>
							<div class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500">
								<span>@Model.InvoiceCity</span>
							</div>
						</div>
						<div class="w-full">
							<label asp-for="InvoiceDistrict" class="block mb-2 text-xs font-medium text-gray-900 relative inline-flex gap-1 dark:text-white items-center">
								İlçe
								<span asp-validation-for="InvoiceDistrict" class="text-error font-semibold text-red-600 rounded-lg text-xs"></span>
							</label>
							<div class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500">
								<span>@Model.InvoiceDistrict</span>
							</div>
						</div>
						<div class="w-full">
							<label asp-for="InvoiceNeighborhood" class="block mb-2 text-xs font-medium text-gray-900 relative inline-flex gap-1 dark:text-white items-center">
								Mahalle
								<span asp-validation-for="InvoiceNeighborhood" class="text-error font-semibold text-red-600 rounded-lg text-xs"></span>
							</label>
							<div class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500">
								<span>@Model.InvoiceNeighborhood</span>
							</div>
						</div>
					</div>
					<div class="flex flex-col sm:flex-row justify-between gap-4">
						<div class="w-full">
							<label asp-for="InvoiceAddressInfo" class="block mb-2 text-xs font-medium text-gray-900 relative inline-flex gap-1 dark:text-white items-center">
								Adres bilgisi
								<span asp-validation-for="InvoiceAddressInfo" class="text-error font-semibold text-red-600 rounded-lg text-xs"></span>
							</label>
							<div class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500">
								<span>@Model.InvoiceAddressInfo</span>
							</div>
						</div>
					</div>
				}
			</div>
			<div class="flex justify-between items-center space-x-4">
				<div></div>
				<div class="flex gap-4 items-center">
					<a asp-area="User" asp-controller="User" asp-action="Addresses" class="hover-border-black bg-white py-1 px-4 rounded-full text-black font-regular text-sm">Geri dön</a>
					<button type="submit"
					        class="hover-border-black bg-black-3 py-1 px-4 rounded-full text-white font-regular text-sm hover:bg-white hover:text-black">
						Güncelle
					</button>
				</div>
			</div>
		</div>
	</div>
</section>