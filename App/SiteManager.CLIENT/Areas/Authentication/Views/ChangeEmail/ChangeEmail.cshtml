@{
	ViewData["Title"] = "E-posta adresini değiştir";
	Layout = "~/Areas/User/Views/Shared/_UserLayout.cshtml";
}


<section class="bg-white dark:bg-gray-900">
    <div class="max-w-2xl px-4">
	    <nav class="flex" aria-label="Breadcrumb">
		    <ol class="inline-flex items-center space-x-1 mb-4 -mt-4 md:mt-4 md:space-x-2 rtl:space-x-reverse">
			    <li class="inline-flex items-center">
				    <a asp-action="Index" asp-controller="User" asp-area="User"
				       class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-black dark:text-gray-400 dark:hover:text-white">
					    <svg class="w-4 h-4 me-2.5" xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24"><g fill="none" stroke="#333" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"><path d="M15 21v-8a1 1 0 0 0-1-1h-4a1 1 0 0 0-1 1v8" /><path d="M3 10a2 2 0 0 1 .709-1.528l7-5.999a2 2 0 0 1 2.582 0l7 5.999A2 2 0 0 1 21 10v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z" /></g></svg>
                        Hesabım
				    </a>
			    </li>
			    <li>
				    <div class="flex items-center">
					    <svg class="rtl:rotate-180 w-3 h-3 text-gray-400 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
						    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
					    </svg>
					    <a asp-area="User" asp-controller="User" asp-action="PersonelInformation" class="ms-1 text-sm font-medium text-gray-700 hover:text-blue-600 md:ms-2 dark:text-gray-400 dark:hover:text-white">Kişisel bilgilerim</a>
				    </div>
			    </li>
			    <li aria-current="page">
				    <div class="flex items-center">
					    <svg class="rtl:rotate-180 w-3 h-3 text-gray-400 mx-1" aria-hidden="true"
					         xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
						    <path stroke="currentColor" stroke-linecap="round"
						          stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4" />
					    </svg>
					    <span class="ms-1 text-sm font-medium text-gray-500 md:ms-2 dark:text-gray-400">@ViewData["Title"]</span>
				    </div>
			    </li>
		    </ol>
	    </nav>
	    <form method="post" asp-action="ChangeEmail" asp-controller="ChangeEmail" asp-area="Authentication">
		    @Html.AntiForgeryToken()
		    <div class="grid mb-4 grid-cols-1 sm:gap-6 sm:mb-5">
			    <div class="flex flex-col mt-6">
				    <h3 class="font-bold text-base">@ViewData["Title"]</h3>
				    <p class="text-xs font-medium text-gray-500">Her zaman erişebileceğiniz bir adres kullanın.</p>
			    </div>
			    @if (ViewBag.Message != null)
			    {
				    <div class="hidden alert text-xs w-max tracking-wide select-none bg-red-500 text-white rounded-lg py-1 px-2">
					    <p>@ViewBag.Message</p>
				    </div>
			    }

			    @if (!ViewData.ModelState.IsValid)
			    {
				    <div class="hidden alert text-xs w-max tracking-wide select-none bg-red-500 text-white rounded-lg py-1 px-2">
					    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
					    {
						    <p>@error.ErrorMessage</p>
					    }
				    </div>
			    }
			    <div class="w-full -mt-2">
				    <label for="newEmail"
				           class="block mb-2 text-xs font-medium text-gray-900 relative inline-flex gap-1 dark:text-white">
					    E-posta
					    <a class="text-xs underline text-gray-500" href="#"> Daha fazla bilgi edinin</a>
					    <button data-popover-target="popover-user-firstname-info" type="button" class="">
						    <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24"><g fill="none" stroke="#9f9f9f" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"><circle cx="12" cy="12" r="10"/><path d="M12 16v-4m0-4h.01"/></g></svg>
					    </button>
					    <div data-popover id="popover-user-firstname-info" role="tooltip" class="absolute z-10 invisible inline-block w-64 text-xs text-gray-500 transition-opacity duration-300 bg-white border border-gray-200 rounded-lg shadow-sm opacity-0 dark:text-gray-400 dark:border-gray-600 dark:bg-gray-800">
						    <div class="px-3 py-2">
							    <p>And here's some amazing content. It's very engaging. Right?</p>
						    </div>
						    <div data-popper-arrow></div>
					    </div>

				    </label>
				    <input id="newEmail" name="newEmail" required value="huzberkay@icloud.com" maxlength="75" minlength="5" placeholder="company@email.com" type="email" class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300
                                            focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600
                                            dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"/>
				    <div class="mt-1 ml-1">
					    <p class="text-xs text-gray-500 font-light">Yardıma mı ihtiyacın var? <a class="text-gray-700 text-xs underline font-medium" href="#">İletişime geç</a></p>
				    </div>
			    </div>
		    </div>
		    <div class="flex justify-between items-center space-x-4">
			    <div></div>
			    <button type="submit"
			            class="hover-border-black bg-black-3 py-1 px-2 rounded text-white font-regular text-sm hover:bg-white hover:text-black">
				    Email adresini güncelle
			    </button>
		    </div>
	    </form>
    </div>
</section>