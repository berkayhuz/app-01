@{
    Layout = "_AuthenticationLayout";
    ViewData["Title"] = "Resend Confirmation Email";
}
<div class="grid grid-cols-1 md:grid-cols-2 items-center">
    <section class="order-2 md:order-none">
        <div class="flex flex-col items-center justify-center px-4 mx-auto md:h-screen lg:py-0">
            <div class="w-full bg-white md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800">
                <div class="py-6 space-y-4 md:space-y-6 sm:p-8">
                    <div class="flex flex-col gap-4">
                        <h1 class="flex items-center text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
                            Doğrulama emailini yeniden gönder
                        </h1>
                        <span class="text-sm text-gray-500 mb-3">
                            Today is a new day. It's your day. You
                            shape it. Sign in to start managing your projects.
                        </span>
                    </div>
                    <form class="space-y-4 md:space-y-6" asp-action="ResendConfirmation" method="post">
	                    <div>
		                    <label for="email"
		                           class="block mb-2 text-xs font-medium text-gray-900 dark:text-white">Email</label>
                            <input type="email" name="email" id="email" value="@ViewBag.Email"
		                           class="bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
		                           placeholder="name@company.com" required="">
	                    </div>
	                    <button type="submit"
	                            class="w-full text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800 bg-btn">
		                    Gönder
	                    </button>
                    </form>
                    @if (TempData["Message"] != null)
                    {
	                    <div class="text-white text-sm bg-red-500 rounded-lg px-4 py-1.5">
                            <span>@TempData["Message"]</span>
	                    </div>
                    }
                </div>
            </div>
        </div>
    </section>
    <div class="order-1 flex flex-col items-center justify-center px-4 mx-auto md:h-screen lg:py-0 h-36 md:h-full">
        <img src="Assets/Uploads/Page-Images/Auth-3.png" alt="">
    </div>
</div>